generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["configuracion", "seguridad"]
}

model Usuario {
  id             BigInt    @id @default(autoincrement())
  nombre         String
  email          String    @unique
  contrase√±a    String
  rol_id         BigInt?
  fecha_creacion DateTime? @default(now()) @db.Timestamptz(6)
  ultimo_acceso  DateTime? @db.Timestamptz(6)
  empresa_id     BigInt?
  empresa        empresa?  @relation(fields: [empresa_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  rol            Rol?      @relation(fields: [rol_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("usuarios")
  @@schema("seguridad")
}

model Rol {
  id          BigInt    @id @default(autoincrement())
  nombre      String    @unique
  permisos    Json
  descripcion String?
  usuarios    Usuario[]

  @@map("roles")
  @@schema("seguridad")
}

model empresa {
  id                  BigInt    @id @default(autoincrement())
  nombre_empresa      String    @unique
  rif                 String    @unique
  direccion           String?
  telefono            String?
  email               String?   @unique
  fecha_creacion      DateTime? @default(now()) @db.Timestamptz(6)
  estado              String?   @default("activo")
  representante       String?
  logo                String?
  pais                String?   @default("Venezuela")
  ciudad              String?
  municipio           String?
  edo_estado          String?
  sector_economico    String?
  actividad_economica String?
  usuarios            Usuario[]

  @@schema("configuracion")
}
